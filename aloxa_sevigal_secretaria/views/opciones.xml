<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
<!-- FORMS -->	
	<!-- FORM  de Opciones-->	
    <record id="opciones_form" model="ir.ui.view">
        <field name="name">Opciones Form</field>
        <field name="model">sevigal.opciones</field>        
        <field name="arch" type="xml">
           	<form string="Opciones" create="false">	            		
         		<group string="Opciones del Módulo Sevigal" col="4">
	           		<field name="unidades_aviso_expiracion_pack" colspan="2"/>
	           		<field name="foro_notificaciones_id" colspan="2"/>         		
         		</group>
           	</form>     	
        </field>
    </record>
<!-- TREE -->
	<!-- TREE opciones -->	
 	<record id="sevigal_opciones_tree" model="ir.ui.view">
 		<field name="name">Tree Opciones</field>
 		<field name="model">sevigal.opciones</field>	 		
		<field name="type">tree</field>
		<field name="arch" type="xml">
		<tree string="Órganos"  create="false">
			<field name="nombre"/>
			<field name="unidades_aviso_expiracion_pack"/>
			<field name="foro_notificaciones_id"/>
		</tree>
		</field>
	</record>
    </data>
</openerp>